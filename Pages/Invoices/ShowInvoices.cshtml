@page
@model ShowInvoicesModel
@{
    ViewData["Title"] = "Invoices List";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Invoices</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Invoice ID</th>
                    <th scope="col">Date</th>
                    <th scope="col">Customer Document</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Total Amount</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Invoices != null && Model.Invoices.Count > 0)
                {
                    foreach (var invoice in Model.Invoices)
                    {
                        <tr>
                            <td>@invoice.InvoiceId</td>
                            <td>@invoice.Date.ToShortDateString()</td>
                            <td>@invoice.Customer.DocumentNumber</td>
                            <td>@($"{invoice.Customer.FirstName} {invoice.Customer.LastName}")</td>
                            <td>@invoice.TotalAmount.ToString("C")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">No invoices found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
