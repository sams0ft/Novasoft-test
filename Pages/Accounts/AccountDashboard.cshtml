@page
@model novasoft_technical_test.Pages.Accounts.AccountDashboardModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="container mt-5">
    <!-- CREATE ACCOUNT FORM -->
    <div class="card shadow-lg border-0 rounded-3 mb-4">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Create Account</h3>
        </div>
        <div class="card-body p-4">
            <form method="post" id="accountForm">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Code Client</label>
                        <input class="form-control" asp-for="Account.CodCli" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Name Client</label>
                        <input class="form-control" asp-for="Account.NomCli" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">NIT</label>
                        <input class="form-control" asp-for="Account.NitCli" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">City Code</label>
                        <input class="form-control" asp-for="Account.CodCiu" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Department Code</label>
                        <input class="form-control" asp-for="Account.CodDep" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Country Code</label>
                        <input class="form-control" asp-for="Account.CodPai" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Address</label>
                        <input class="form-control" asp-for="Account.Di2Cli" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Phone</label>
                        <input class="form-control" asp-for="Account.Te1Cli" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Client Type</label>
                        <input class="form-control" min="1" max="5" value="1" asp-for="Account.TipCli" type="number" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Join Date</label>
                        <input class="form-control" asp-for="Account.FecIng" value="@DateTime.Today.ToString("yyyy-MM-dd")" type="date" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input class="form-control" asp-for="Account.EMail" type="email" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">ID Type</label>
                        <input class="form-control" asp-for="Account.TipIde" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Last Name</label>
                        <input class="form-control" asp-for="Account.Ap1Cli" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">First Name</label>
                        <input class="form-control" asp-for="Account.Nom1Cli" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Person Type</label>
                        <input class="form-control" min="1" max="2" value="1" asp-for="Account.TipPer" type="number" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Status</label>
                        <input class="form-control" asp-for="Account.EstCli" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">External Client Code</label>
                        <input class="form-control" asp-for="Account.CodCliExtr" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Website</label>
                        <input class="form-control" asp-for="Account.PagWeb" type="url" required />
                    </div>
                </div>
                <div asp-validation-summary="All" class="text-danger mt-3"></div>
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-success">Send</button>
                </div>
            </form>
        </div>
    </div>

    <!-- ACCOUNTS LIST -->
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Accounts List</h3>
            <div class="input-group" style="width: 300px;">
                <input id="searchCli" type="search" asp-for="CodCli" value="@Model.CodCli" class="form-control" placeholder="Search by Code Client">
                <button id="searchBtn" class="btn btn-outline-light" type="button">Search</button>
            </div>
        </div>
        <div class="card-body p-4">
            @if (Model.Accounts != null && Model.Accounts.Count > 0)
            {
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Code Client</th>
                            <th>Name Client</th>
                            <th>NIT</th>
                            <th>Email</th>
                            <th>Phone</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var acc in Model.Accounts)
                        {
                            <tr>
                                <td>@acc.CodCli</td>
                                <td>@acc.NomCli</td>
                                <td>@acc.NitCli</td>
                                <td>@acc.EMail</td>
                                <td>@acc.Te1Cli</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    No accounts found.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const input = document.getElementById("searchCli");
        const button = document.getElementById("searchBtn");

        button.addEventListener("click", () => {
            const value = input.value;
            window.location = `?codCli=${value}`;
        });
    </script>
}
