@page
@model LoginAccountsModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-dark text-white text-center">
                    <h3 class="mb-0">Login</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="mb-3">
                            <label for="userLogin" class="form-label">User Login</label>
                            <input type="text" class="form-control" id="userLogin" name="UserLogin"
                                   value="@Model.UserLogin" required />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="Password"
                                   value="@Model.Password" required />
                        </div>

                        <div class="mb-3">
                            <label for="connectionName" class="form-label">Connection Name</label>
                            <input type="text" class="form-control" id="connectionName" name="ConnectionName"
                                   value="@Model.ConnectionName" required />
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-danger mt-3 text-center">
                            @Model.Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
